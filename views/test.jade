extends layout

block content
  h1= title
  p Welcome to #{title}
  input#fileupload(type="file" name="files[]" data-url="/file/uploading" multiple)
  div#progress
    div.bar(style="width: 10%")
  script(type='text/javascript').
    $(function () {
      $('#fileupload').fileupload(
              {
                dataType: 'json',
                done: function (e, data) {
                    $.each(data.result.files,
                            function (index, file) {
                              $('<p/>').text(file.name).appendTo(document.body);
                            });
                },
                progressall: function (e, data) {
                  var progress = parseInt(data.loaded / data.total * 100, 10);
                  $('#progress .bar').css(
                          'width',
                          progress + '%'
                  );
                }
              });
            }
    );